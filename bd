create schema appmobile;
use appmobile;

CREATE TABLE cardapiocliente (
    id BIGINT NOT NULL AUTO_INCREMENT,
    PRIMARY KEY (id)
);
CREATE TABLE alimento (
    id BIGINT NOT NULL AUTO_INCREMENT,
    nome VARCHAR(40) NOT NULL,
    gramas FLOAT,
    cardapio_cliente_id BIGINT,
    PRIMARY KEY (id),
    CONSTRAINT fk_alimento_cardapio
        FOREIGN KEY (cardapio_cliente_id)
        REFERENCES cardapiocliente(id)
        ON DELETE SET NULL
        ON UPDATE CASCADE
);
CREATE TABLE consultaModel (
    id BIGINT NOT NULL AUTO_INCREMENT,
    resposta TEXT NOT NULL,
    PRIMARY KEY (id)
);
